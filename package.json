{
  "name": "Glyphr-Studio",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "nw"
  },
  "main": "dev/Glyphr_Studio.html",
  "window": {
    "title": "Glyphr Studio",
    "icon": "glyphr_studio_logo.png",
    "toolbar": false,
    "frame": true,
    "width": 1600,
    "height": 900,
    "position": "center",
    "min_width": 1000,
    "min_height": 700
  },
  "devDependencies": {
    "grunt": "^1.0.2",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-copy": "^0.7.0",
    "grunt-contrib-cssmin": "^0.10.0",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-contrib-uglify-es": "git+https://github.com/gruntjs/grunt-contrib-uglify.git#harmony"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattlag/Glyphr-Studio.git"
  },
  "jshintConfig": {
    "bitwise": true,
    "curly": false,
    "eqeqeq": true,
    "evil": false,
    "forin": true,
    "freeze": true,
    "latedef": false,
    "newcap": true,
    "nonbsp": true,
    "plusplus": false,
    "strict": false,
    "undef": false,
    "unused": false,
    "debug": true,
    "globalstrict": true,
    "browser": true,
    "devel": true,
    "predef": [
      "Coord",
      "Path",
      "PathPoint",
      "Shape",
      "LinkedShape",
      "Char",
      "GlyphrProject",
      "Guide"
    ]
  }
}
